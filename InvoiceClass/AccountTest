package accounttest;
import java.util.Scanner;


/**
 *
 * @author clebo
 */
public class AccountTest {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        Scanner input = new Scanner(System.in);
        
        //create an accout object
        Account myAccount = new Account();
        //display intial value of name(null)
        System.out.printf("intitial name is: %s%n",myAccount.getName());
        //display inital value of year(null)
        System.out.printf("initial year of study is: %s%n", myAccount.getYear());
        
                
        System.out.println("Plese enter the name: ");
        String theName = input.nextLine();
        
        System.out.println("Please enter the year the student is in");
        String theYear= input.nextLine();
        
        myAccount.setName(theName);
        myAccount.setYear(theYear);
        
        System.out.println();
        
        
        
        //display the name stored in the object
        System.out.printf("Name in the object myAccount is: %n%s%n",
                myAccount.getName());
        System.out.println();
       System.out.printf("Name in the object myAccout is: %n%s%n",
               myAccount.getYear());
    }
    
}
